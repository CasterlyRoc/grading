<p>
    <strong>Title:</strong>
    <%= @assignment.Title %>
</p>

<p>
  <strong>Due Date:</strong>
  <%= @assignment.due_date %>
</p>

<p>
  <strong>Total Points:</strong>
  <%= @assignment.tot_points %>
</p>

<p><strong>Questions:</strong></p>
<% @questions.each do |q| %>
  <p>
    <strong>Question:</strong>
    <%= q.question %>
  </p>

  <p>
    <strong>Point Value:</strong>
    <%= q.point_value %>
  </p>

  <p>
    <strong>Answer:</strong>
    <%= q.answer %>
  </p>
<% end %>
<h2>Add a question:</h2>
<%= form_for([@assignment, @questions.build]) do |f| %>
  <p>
    <%= f.label :question %><br>
    <%= f.text_field :question %>
  </p>
  <p>
    <%= f.label :point_value %><br>
    <%= f.number_field :point_value %>
  </p>
  <p>
    <%= f.label :answer %><br>
    <%= f.text_field :answer %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
